{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "16.8"
    }
  },

  "plugins": [
    "react"
  ],
  "env": {
    "es6": true,
    "browser": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "standard-jsx"],
  "rules": {
    "jsx-quotes": ["error", "prefer-double"]
  }
}